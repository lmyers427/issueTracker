  <div class="content-wrapper">
    <div class="container-fluid">

    <div class="row mt-3">
      <div class="col-lg-6">
         <div class="card">
           <div class="card-body">
           <div class="card-title">New Ticket</div>
           <hr>
            <form action="/createTicket" method="POST" >

              <div class="form-group">
                <label for="input">Ticket Name</label>
                <input class="form-control" type="text" name="ticketName" placeholder="Please Enter a Ticket Name">
               </div>               

               <div class="form-group">
                <label for="input">Deadline (Optional)</label>
                <input class="form-control" type="date" name="deadline" >
               </div>  

           <div class="form-group">
            <label for="input-1">category</label>
            <select class="form-control" name="category" id="input-5">
                <option value="category1">category1</option>
                <option value="category2">category2</option>
                <option value="category3">category3</option>
              </select>
           </div>
           <div class="form-group">
            <label for="input-2">description</label>
            <textarea class="form-control" name="message" rows="3" cols="30">Enter a brief decription...
            </textarea>
           </div>
          
           <div class="form-group">
            <label for="input-4">Assign Team/User</label>
            <select class="form-control" name="assignedTo" id="input-4">
              <% if(users){%>
              <% users.forEach(function(property) { %>

                <option value="<%=property._id%>"><%=property.username%></option>
                            
              <%})%>

              <% } %>

              <% if(teams){%>
                <% teams.forEach(function(property) { %>
  
                  <option value="<%=property._id%>"><%=property.name%></option>
                              
                <%})%>
  
                <% } %>

            </select>
            </div>
           <div class="form-group">
            <label for="input-5">Priorty</label>
            <select name="priority" class="form-control" id="input-5">
                <option value="high">high</option>
                <option value="medium">medium</option>
                <option value="low">low</option>
              </select>
           
           </div>
           
           <div class="form-group">
            <button type="submit" class="btn btn-light px-5"><i class="icon-lock"></i> Create Ticket</button>
          </div>
          </form>
         </div>
         </div>
      </div>

      
    </div><!--End Row-->

	<!--start overlay-->
		  <div class="overlay toggle-menu"></div>
		<!--end overlay-->

    </div>
